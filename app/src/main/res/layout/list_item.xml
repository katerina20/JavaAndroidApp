<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/track_image_list"
        android:layout_width="@dimen/image_in_list"
        android:layout_height="@dimen/image_in_list"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_margin="@dimen/vertical_margin"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="2"
        android:padding="@dimen/vertical_margin"
        android:paddingEnd="@dimen/border_margin"
        android:orientation="vertical"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/track_name_list"
            android:layout_width="wrap_content"
            android:gravity="bottom"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/track_name_text_size"
            android:layout_height="wrap_content"
            android:text="@string/preview"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/artist_name_list"
            android:gravity="top"
            android:text="@string/preview"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/artist_name_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>